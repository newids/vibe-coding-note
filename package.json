{
    "name": "vibe-coding-notes",
    "version": "1.0.0",
    "description": "A web application for managing coding tool notes and experiences",
    "private": true,
    "scripts": {
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
        "dev:frontend": "cd frontend && npm run dev",
        "dev:backend": "cd backend && npm run dev",
        "build": "npm run build:frontend && npm run build:backend",
        "build:frontend": "cd frontend && npm run build",
        "build:backend": "cd backend && npm run build",
        "start": "npm run start:backend",
        "start:backend": "cd backend && npm start",
        "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
        "test": "node test-runner.js all",
        "test:unit": "node test-runner.js unit",
        "test:integration": "node test-runner.js integration",
        "test:e2e": "node test-runner.js e2e",
        "test:quick": "node test-runner.js --skip-setup --skip-cleanup",
        "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
        "docker:prod": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "docker:clean": "docker-compose down -v --remove-orphans && docker system prune -f"
    },
    "devDependencies": {
        "concurrently": "^9.1.0"
    },
    "keywords": [
        "coding",
        "notes",
        "web-app",
        "react",
        "express"
    ],
    "author": "",
    "license": "ISC"
}